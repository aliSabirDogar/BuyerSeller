        <TextView android:textStyle="bold"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Buyer Name" android:layout_weight="1" android:textColor="@android:color/black" android:layout_marginLeft="5dp"/>
        <TextView android:textStyle="bold" android:id="@+id/tv_sellertray_id" android:layout_width="wrap_content" android:textColor= "@android:color/black" android:layout_height="wrap_content" android:text="Night party  LC" android:layout_weight="1" />
    </LinearLayout>
