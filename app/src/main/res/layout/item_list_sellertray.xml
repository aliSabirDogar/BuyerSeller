        <TextView android:textStyle="bold" android:id="@+id/tv_sellertray_buyercell" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@android:color/black" android:text="10.00" android:layout_weight="1" />
    </LinearLayout>
