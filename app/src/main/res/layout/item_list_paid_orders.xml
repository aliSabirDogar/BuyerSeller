<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/ticket_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_item_paid_orders_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Order Code "
                    android:textSize="14dp"
                    android:gravity="center"
                    android:layout_marginLeft="0dp"
                    android:textColor="@android:color/black"
                    android:layout_weight="1"/>

            </LinearLayout>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#000000"/>

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2">
                <TextView
                    android:id="@+id/tv_item_paid_orders_cell_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Customer cell phone"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_weight="2"/>
            </LinearLayout>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#000000"/>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_item_paid_orders_client_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="Client name" />
            </LinearLayout>
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#000000"/>

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_item_paid_orders_payment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:text="Payment time date"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>