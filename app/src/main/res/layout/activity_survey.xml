<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:id="@+id/client_layout" android:layout_width="match_parent" android:background="@color/cardview_light_background" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="80dp" >
            <TextView android:textSize="14dp" android:textColor="@android:color/black" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:text="Please give us your opinion about the APP. What do you think about it?" />

        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/tf_survey_date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/text_fields_style"
                android:hint="Date"
                android:inputType="date"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="13sp" />
            <EditText
                android:id="@+id/tf_survey_customer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/text_fields_style"
                android:hint="Customer"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="13sp" />
            <EditText
                android:id="@+id/tf_survey_recomendation"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/text_fields_style"
                android:hint="Recomendations"
                android:padding="10dp"
                android:textSize="13sp" />
            <EditText android:textSize="13sp"    android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" android:textAlignment="center" android:background="@drawable/text_fields_style"  android:layout_width="match_parent" android:layout_height="100dp"  android:layout_marginTop="10dp" android:hint="Observations"  />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_survey_goOut"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bluebutton_style"
                    android:text="Go Out " />

                <Button
                    android:id="@+id/btn_survey_send"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bluebutton_style"
                    android:text="Send " />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>