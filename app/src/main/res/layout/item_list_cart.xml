<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0" >
        <ImageView
            android:id="@+id/image_cart_item"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="5dp"
            android:src="@drawable/grocery" />
    </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textview1"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:maxLength="15"
                        android:layout_marginLeft="4dp"
                        android:text="Product Name"
                        android:textColor="@android:color/black"
                        android:textSize="13dp" />

                        <TextView
                            android:id="@+id/tv_product_item_cart"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Product Name"
                            android:textColor="@android:color/black"
                            android:textSize="13dp"
                            android:maxLength="15" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textview2"
                        android:layout_width="wrap_content"
                        android:textColor="@android:color/black"
                        android:layout_height="match_parent"
                        android:text="Quantity"
                        android:layout_marginLeft="4dp"
                        android:textSize="12dp" />
                        <TextView
                            android:id="@+id/tv_quantity_item_cart"
                            android:layout_width="wrap_content"
                            android:textColor="@android:color/black"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:text="Quantity"
                            android:textSize="12dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textview3"
                        android:layout_width="wrap_content"
                        android:textColor="@android:color/black"
                        android:layout_height="match_parent"
                        android:text="Price"
                        android:layout_marginLeft="4dp"
                        android:textSize="12dp" />
                        <TextView
                            android:id="@+id/tv_price_item_cart"
                            android:layout_width="wrap_content"
                            android:textColor="@android:color/black"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="32dp"
                            android:text="Price"
                            android:textSize="10dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textview4"
                        android:layout_width="wrap_content"
                        android:textColor="@android:color/black"
                        android:layout_height="match_parent"
                        android:text="Subtotal"
                        android:layout_marginLeft="4dp"
                        android:textSize="12dp" />
                        <TextView
                            android:id="@+id/tv_subtotal_item_cart"
                            android:layout_width="wrap_content"
                            android:textColor="@android:color/black"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:text="Subtotal"
                            android:textSize="12dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textview5"
                        android:layout_width="wrap_content"
                        android:textColor="@android:color/black"
                        android:layout_height="match_parent"
                        android:text="Seller"
                        android:layout_marginLeft="4dp"
                        android:textSize="12dp" />
                        <TextView
                            android:id="@+id/tv_seller_item_cart"
                            android:layout_width="wrap_content"
                            android:textColor="@android:color/black"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="29dp"
                            android:text="seller"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
        android:gravity="bottom"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_remove_cart_item"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="15dp"
                android:background="@color/colorPrimary"
                android:text="Remove" />
        </LinearLayout>
        </LinearLayout>
</LinearLayout>
</LinearLayout>