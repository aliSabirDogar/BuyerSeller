<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"  android:layout_width="match_parent" android:layout_height="match_parent">
	<LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="50dp">
		<TextView android:textSize="15sp" android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="MY PHONE NUMBER IS " />
	</LinearLayout>
	<LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginTop="30dp">
		<TextView android:id="@+id/tv_phoneNumber_countryCode" android:textSize="25sp" android:textStyle="bold"  android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:text="+51" />

		<EditText
			android:id="@+id/tf_phoneNumber_cell"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginLeft="10dp"
			android:layout_marginTop="0dp"
			android:layout_marginRight="50dp"
			android:background="@drawable/text_fields_style"
			android:hint="Your cell phone number"
			android:inputType="number"
			android:padding="10dp"
			android:singleLine="true"
			android:textSize="13sp" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"

		android:layout_marginTop="30dp"
		android:gravity="center"
		android:orientation="vertical">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="20dp"

			android:layout_marginTop="30dp"
			android:layout_marginRight="20dp"
			android:text="Enter your cell number to verify your account and stay in touch"
			android:textSize="13sp" />

		<CheckBox
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/cb_phone_number_terms"
			android:layout_marginTop="30dp"
			android:text="Have  read and accept the terms of use"
			android:textSize="13sp" />

		<Button
			android:id="@+id/btn_phone_number_proceed"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_marginLeft="30dp"

			android:layout_marginRight="30dp"
			android:layout_marginTop="30dp"
			android:background="@drawable/bluebutton_style"
			android:text="Proceed " />
	</LinearLayout>
</LinearLayout>
