<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/custom_dailogue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="WELCOME"

            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:textStyle="bold" />


    <TextView android:textSize="14dp"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"

        android:text="Please Select Your Category" />




    <LinearLayout  android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:gravity="center">
        <Button
            android:id="@+id/btn_customDialogue_buyer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:layout_gravity="center"
            android:text="BUYRER "

            android:textSize="18sp" />
        <Button
            android:id="@+id/btn_customDialogue_seller"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorPrimary"
            android:text="SELLER "
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>